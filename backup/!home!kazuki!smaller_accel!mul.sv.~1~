`include "AXIS.sv"

module mul(
   AXIS axis
   );

    float_mul mul_0
      (
       .aclk(axis.aclk),
       .s_axis_a_tdata(axis.a_tdata),
       .s_axis_a_tready(axis.a_tready),
       .s_axis_a_tvalid(axis.a_tvalid),
       .s_axis_b_tdata(axis.b_tdata),
       .s_axis_b_tready(axis.b_tready),
       .s_axis_b_tvalid(axis.b_tvalid),
       .m_axis_result_tdata(axis.r_tdata),
       .m_axis_result_tvalid(axis.r_tvalid),
       .m_axis_result_tready(axis.r_tready)
    );

endmodule
       
