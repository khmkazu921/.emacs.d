alias xsdk='env SWT_GTK3=0 xsdk'
function vivado(){
	 echo "Starting Vivado 2020.1 ..."
	 cd ~/.Vivado_log
	 (env SWT_GTK3=0 /tools/Xilinx/Vivado/2020.1/bin/vivado >& /dev/null &)
	 wait
	 cd ~
}

function vivado2019(){
	 echo "Starting Vivado 2019.2 ..."
	 cd ~/.Vivado_log
	 (env SWT_GTK3=0 /tools/Xilinx/Vivado/2019.2/bin/vivado >& /dev/null &)
	 wait
	 cd ~
}

