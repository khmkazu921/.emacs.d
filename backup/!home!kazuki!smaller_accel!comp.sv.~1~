`include "top_package.sv"

module comp
  import structures::*;
  (
   input clk,
   input float in,
   output reg out
   );

    always_ff @(posedge clk) begin
        if(~|in)
          out <= 1;
        else
          out <= 0;
    end
   
endmodule // comp

