module make_spm
    #(
      parameter integer COUNT =100 
      )
    (
     input clk,
     input resetn
     );

    reg [11:0] addr_init_mesh;
    reg [17:0] dout_init_mesh;
//    reg [14:0] addr_ray_test;
    reg [12:0] addr_map_test;
//    reg [17:0] dout_ray_test;
    reg [11:0] dout_map_test;
    reg [5:0] offset;

    read_initial_mesh read_initial_mesh 
      (
       .clk(),
       .
       );

    always_ff @(posedge clk) begin
        case(state)
            'b00: begin
                addr_init_mesh <= 0;
            end
            'b01: begin
                addr_init_mesh <= start_dep[isandglass] + offset;
            end
        endcase
    end // always_ff @ (posedge clk)
    
endmodule
