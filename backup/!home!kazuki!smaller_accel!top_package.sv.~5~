`include "structures.sv"
`include "parameters.sv"

package top_package;
    import structures::*;
    import parameters::*;

    typedef enum logic [1:0] {END_XYZ, X, Y, Z} state_xyz;
    typedef enum logic [4:0]
                 {RESET,
                  LC_SUB,        LC_SUB_WAIT,
                  CUR_DIV,       CUR_DIV_WAIT,
                  CUR_INT,       CUR_INT_WAIT,
                  CUR_DECR,
                  CUR_FLOAT,     CUR_FLOAT_WAIT,
                  MS_MUL,        MS_MUL_WAIT,
                  MS_SUB,        MS_SUB_WAIT,
                  STEP_R_DIV,    STEP_R_DIV_WAIT,
                  ROFFSET_SUB,   ROFFSET_SUB_WAIT,
                  ROFFSET_DIV,   ROFFSET_DIV_WAIT,
                  KEEP_R_SUB,    KEEP_R_SUB_WAIT,
                  END_0
                  } art_initialize_state;

    typedef enum logic [2:0] 
                 {
                  RESET_0, RMIN, CALC, IRAY, LOOP, END_LOOP
                  } art_geometric_state ;
endpackage
       
