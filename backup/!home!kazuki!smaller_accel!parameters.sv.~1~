package parameters;
    parameter MOD_NUM = 1;
    parameter N_SIDE = 8;
    parameter NMESH_X_TOTAL = 32;
    parameter N_RAY = 1;
    parameter SRAM_EDGE = 4;
    parameter NMESH_Y_TOTAL = NMESH_X_TOTAL;
    parameter NMESH_Z_TOTAL = NMESH_X_TOTAL;
    parameter NMESH_X_LOCAL = NMESH_X_TOTAL/1;
    parameter NMESH_Y_LOCAL = NMESH_Y_TOTAL/1;
    parameter NMESH_Z_LOCAL = NMESH_Z_TOTAL/1;
    parameter NMESH_XY_LOCAL = NMESH_X_LOCAL*NMESH_Y_LOCAL;
    parameter NMESH_YZ_LOCAL = NMESH_Y_LOCAL*NMESH_Z_LOCAL;
    parameter NMESH_ZX_LOCAL = NMESH_Z_LOCAL*NMESH_X_LOCAL;
    parameter NMESH_LOCAL = NMESH_X_LOCAL*NMESH_Y_LOCAL*NMESH_Z_LOCAL;
    parameter NMESH_MAX_FACE  = NMESH_XY_LOCAL;
    parameter N_ANG = 12 * N_SIDE * N_SIDE;
    parameter RAY_GROUP_NUM = 1;
    parameter SRAM_REGION = SRAM_EDGE*SRAM_EDGE;
    parameter TINY  = 1.0e-31;
    parameter SRAM_BLOCK = 4*N_RAY*NMESH_X_LOCAL;
    parameter SUB_LATENCY = 12;
    parameter ADD_LATENCY = 4;
    parameter COMP_LATENCY = 1;
    parameter MUL_LATENCY = 9;
    parameter DIV_LATENCY = 29;
    parameter EXP_LATENCY = 4;
endpackage
       
