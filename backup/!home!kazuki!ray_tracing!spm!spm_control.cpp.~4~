#include <iostream>

#define N_LAYER (10)
#define N_MESHX (8)
#define N_MESHY (8)
#define N_MESHXY (N_MESHX*N_MESHY)
#define PRINT_ARRAY(array) for(size_t i=0; i<(int)sizeof(array); i++) cout << *array[i] << " "; cout << endl;

using namespace std;

struct mesh_chunk {
    int length, lowest, pointer;
};

struct scratchpad_memory {
    struct mesh_chunk chunk[N_MESHY];
};

int main() {
    int layer_size[N_LAYER] = {25, 16, 9, 4, 1, 1, 4, 9, 16, 25};
    int spm_size = 0;
    for(int i=0; i<N_LAYER; i++) {
        spm_size += layer_size[i];
    }
    struct scratchpad_memory *spm = new scratchpad_memory[spm_size];
    
    
    
    delete[] spm;
    return 0;
}
